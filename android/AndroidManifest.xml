<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="co.romesoft.toddlers.puzzle.toys"
      android:screenOrientation="landscape"
      android:versionCode="2"
      android:versionName="1.0.2"
      android:installLocation="auto">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="11" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <!-- Required permission to use in-app billing. -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
        <activity android:name="LauncherActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Mandatory activity declaration to show the Ad in the embedded browser 
		<activity android:name="com.inmobi.androidsdk.IMBrowserActivity"
			android:configChanges="keyboardHidden|orientation|keyboard" />
		-->
		<activity android:name="com.google.ads.AdActivity"
              
              android:configChanges="keyboardHidden|orientation|keyboard|screenLayout|uiMode|screenSize|smallestScreenSize"
              />
		
		<service android:name="co.romesoft.toddlers.puzzle.toys.bill.BillingService" />

        <receiver android:name="co.romesoft.toddlers.puzzle.toys.bill.BillingReceiver">
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    
    </application>
</manifest>
